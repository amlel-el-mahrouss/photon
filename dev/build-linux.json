{
  "compiler_path": "clang++",
  "compiler_std": "c++20",
  "headers_path": ["./", "./core", "../vendor", "../vendor/zt/dev"],
  "sources_path": [
    "src/core/*.cc",
    "src/engine/*.cc",
    "src/plugin/*.cc",
    "src/ui/*.cc"
  ],
  "output_name": "./dist/PhotonBrowser.elf",
  "compiler_flags": [
    "-lssl",
    "-lcrypto",
    "-lGraphicsKit",
    "-lFoundationKit",
    "$(pkg-config gtkmm-3.0 --cflags --libs)"
  ],
  "cpp_macros": [
    "__PHOTON__",
    "__AMD64_PHOTON__",
    "cPhotonVersion=0x0100",
    "cPhotonVersionHighest=0x0100",
    "cPhotonVersionLowest=0x0100"
  ]
}
