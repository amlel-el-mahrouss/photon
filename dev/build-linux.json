{
  "compiler_path": "clang++",
  "compiler_std": "c++20",
  "headers_path": ["./", "./core", "../vendor"],
  "sources_path": [
    "src/core/*.cc",
    "src/engine/*.cc",
    "src/plugin/*.cc",
    "src/ui/*.cc"
  ],
  "output_name": "./dist/PhotonBrowser.elf",
  "compiler_flags": [
    "-lssl",
    "-lcrypto",
    "$(pkg-config gtkmm-3.0 --cflags --libs)"
  ],
  "cpp_macros": [
    "__PHOTON__",
    "__AMD64_PHOTON__",
    "cVitoVersion=0x0100",
    "cVitoVersionHighest=0x0100",
    "cVitoVersionLowest=0x0100"
  ]
}
