{
  "compiler_path": "clang++",
  "compiler_std": "c++20",
  "headers_path": ["./", "./core", "../vendor", "../vendor/zt/dev"],
  "sources_path": [
    "src/core/*.cc",
    "src/dom/*.cc",
    "src/plugin/*.cc",
    "src/js/*.cc",
    "src/network/*.cc"
  ],
  "output_name": "./dist/libPhoton.dylib",
  "compiler_flags": [
    "$(pkg-config gtkmm-3.0 --cflags --libs)",
    "$(pkg-config openssl --cflags --libs)",
    "-shared",
    "-fPIC"
  ],
  "cpp_macros": [
    "__PHOTON__",
    "__AMD64_PHOTON__",
    "cPhotonVersion=0x0100",
    "cPhotonVersionHighest=0x0100",
    "cPhotonVersionLowest=0x0100"
  ]
}
